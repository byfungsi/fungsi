{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["import", "typescript"],
	"env": {
		"browser": true,
		"node": true,
		"es2021": true
	},
	"globals": {},
	"categories": {
		"correctness": "warn",
		"suspicious": "warn",
		"pedantic": "off",
		"perf": "warn",
		"style": "off",
		"restriction": "off",
		"nursery": "off"
	},
	"rules": {},
	"ignorePatterns": ["**/node_modules", "**/dist", "**/build", "**/.turbo"]
}
